<!DOCTYPE html>
@model UserInterface.Models.Article

@{
    ViewData["Title"] = "Articles";
}

<button onclick="window.location.href='@Url.Action("CreateArticle", "Home")'">Create article</button>

<div class="text-center">
    <h1 class="titletext1">Articles - edit</h1>
    @foreach (var article in Model.articles)
    {
        <a href="/Home/CreateArticle/@article.Id" style="text-decoration:none">
            <div style="background-color:#5555ff">
                <h2 class="titletext2">Title: @article.Title</h2>
                <div class="container2">
                    <p class="nomargin">Created: @article.CreateDate</p>
                    @if (@article.EditDate.Ticks != 0)
                    {
                    <p class="nomargin">Edited: @article.EditDate</p>
                    }
                </div>
            </div>
        </a>
    }
</div>
